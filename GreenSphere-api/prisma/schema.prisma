generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./prisma/dev.db"
}

model Plant {
  id                  Int      @id @default(autoincrement())
  name                String
  subtitle            String
  label               String   
  plantType           String
  price               Float
  isInSale            Boolean
  discountPercentage  Float
  features            String
  description         String
  imgUrl              String
  type                Type?      @relation(fields: [typeId], references: [id])
  typeId              Int?       @unique
}
 
model Type{
  id                  Int       @id @default(autoincrement())
  typeName            String
  plant               Plant?     
  plantId             Int?      @unique
}